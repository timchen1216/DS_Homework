{
    "tasks": [        
        {
            "type": "cppbuild",
            "label": "C/C++: gcc 建置使用中檔案",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "gcc",
                "-lev",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "編譯器: /usr/bin/gcc"
        }
    ],
    "version": "2.0.0"
}